<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hutb.volunteerActivity.mapper.VolunteerActivityMapper">
    <select id="queryVolunteerActivityList" resultType="com.hutb.volunteerActivity.model.pojo.VolunteerActivity">
        select * from activity
        <where>
            status != '-1'
            <if test="activityName != null and activityName != ''">
                and activity_name like CONCAT('%', #{activityName}, '%')
            </if>
            <if test="status != null and status != ''">
                and status = #{status}
            </if>
            <if test="startTime != null and startTime != ''">
                and start_time >= #{startTime}
            </if>
            <if test="endTime != null and endTime != ''">
                and end_time >= #{endTime}
            </if>
        </where>
        order by update_time desc
    </select>
</mapper>