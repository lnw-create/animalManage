<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hutb.pet.mapper.PetMapper">
    <!-- 查询宠物列表（分页） -->
    <select id="queryPetList" resultType="com.hutb.pet.model.pojo.Pet">
        SELECT * FROM pet
        <where>
            <if test="name != null and name != ''">
                AND name LIKE CONCAT('%', #{name}, '%')
            </if>
            <if test="species != null and species != ''">
                AND species = #{species}
            </if>
            <if test="adoptionStatus != null">
                AND adoption_status = #{adoptionStatus}
            </if>
        </where>
        ORDER BY create_time DESC
    </select>
</mapper>